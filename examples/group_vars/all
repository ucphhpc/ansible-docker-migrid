#to solve time zone problems in promtail for the log files, we have the below, see config.yml.j2 for promtail-migrid
promtail_ts_a: "+02:00"
promtail_ts_b: "+02:00"


# Subnet information for the lustre-network role
gc_data_subnet: ip-net-site-a
